# =============================================================================
# Force App - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Core Configuration
# -----------------------------------------------------------------------------

# [REQUIRED] Google Gemini API Key
API_KEY=your_gemini_api_key_here

# Node environment (development, production, test)
NODE_ENV=production

# Server port (default: 3000)
PORT=8080

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# [REQUIRED for production] JWT Secret for session tokens
# CRITICAL: Must be set in production to prevent session loss on restart
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_64_char_hex_secret_here

# Admin API keys (comma-separated) for admin endpoints
# ADMIN_API_KEYS=key1,key2,key3

# Allowed CORS origins (comma-separated)
# If not set, auto-detects from Railway environment variables
# ALLOWED_ORIGINS=https://your-domain.com,https://another-domain.com

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------

# Redis URL for persistent session storage
# CRITICAL for production: In-memory storage loses sessions on restart
# REDIS_URL=redis://username:password@host:port

# Session TTL in milliseconds (default: 3600000 = 1 hour)
# SESSION_TTL_MS=3600000

# Maximum number of in-memory sessions (default: 100)
# MAX_SESSIONS=100

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# API request timeout in milliseconds (default: 300000 = 5 minutes)
# Note: Should be less than your proxy/load balancer timeout
# API_TIMEOUT_MS=300000

# Maximum request body size (default: 50mb)
# REQUEST_BODY_LIMIT=50mb

# Maximum cost per API request in USD (default: 0.50)
# MAX_COST_PER_REQUEST=0.50

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable multi-model routing (default: true)
# ENABLE_MODEL_ROUTING=true

# Enable/disable advanced (expensive) model tier (default: true)
# ENABLE_ADVANCED_TIER=true
